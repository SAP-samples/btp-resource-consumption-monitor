{
    "_version": "1.15.0",
    "sap.app": {
        "id": "cards.breakdownbylevel",
        "type": "card",
        "i18n": "i18n/i18n.properties",
        "title": "{{title}}",
        "description": "{{description}}",
        "applicationVersion": {
            "version": "2.0.0"
        }
    },
    "sap.ui": {
        "technology": "UI5",
        "deviceTypes": {
            "desktop": true,
            "phone": true,
            "tablet": true
        },
        "icons": {
            "icon": "sap-icon://line-chart"
        }
    },
    "sap.card": {
        "type": "Analytical",
        "designtime": "dt/configuration",
        "data": {
            "request": {
                "url": "{{destinations.btprc-srv}}/odata/v4/presentation/Card_TodaysMeasuresByLevels",
                "withCredentials": true,
                "parameters": {
                    "$filter": "level eq '{filters>/level/selectedItem/key}'",
                    "$orderby": "forecast_cost desc"
                }
            },
            "path": "/value"
        },
        "header": {
            "type": "Default",
            "title": "{{title}}",
            "status": {
                "text": "{= 'Latest reading: ' + ${/value/0/retrieved} }"
            },
            "subTitle": "Today's forecast by {filters>/level/value}",
            "icon": {
                "src": "sap-icon://donut-chart"
            }
        },
        "content": {
            "chartType": "donut",
            "chartProperties": {
                "title": {
                    "visible": false
                },
                "legend": {
                    "visible": true
                },
                "plotArea": {
                    "dataLabel": {
                        "visible": true,
                        "showTotal": true
                    }
                }
            },
            "dimensions": [
                {
                    "name": "Name",
                    "value": "{name}"
                }
            ],
            "measures": [
                {
                    "name": "Forecast",
                    "value": "{forecast_cost}"
                }
            ],
            "feeds": [
                {
                    "uid": "size",
                    "type": "Measure",
                    "values": [
                        "Forecast"
                    ]
                },
                {
                    "uid": "color",
                    "type": "Dimension",
                    "values": [
                        "Name"
                    ]
                }
            ]
        },
        "configuration": {
            "destinations": {
                "btprc-srv": {
                    "name": "btprc-srv",
                    "defaultUrl": "/odata/v4/presentation/BTPAccountMeasures"
                }
            },
            "filters": {
                "level": {
                    "selectedKey": "Sub Account",
                    "type": "ComboBox",
                    "label": "Level",
                    "placeholder": "Level",
                    "data": {
                        "json": [
                            {
                                "key": "Global Account",
                                "text": "Global Account"
                            },
                            {
                                "key": "Directory",
                                "text": "Directory"
                            },
                            {
                                "key": "Sub Account",
                                "text": "Sub Account"
                            },
                            {
                                "key": "Datacenter",
                                "text": "Datacenter"
                            }
                        ]
                    },
                    "item": {
                        "path": "/",
                        "template": {
                            "key": "{key}",
                            "title": "{text}"
                        }
                    }
                }
            }
        }
    },
    "sap.platform.mobilecards": {
        "compatible": false
    }
}