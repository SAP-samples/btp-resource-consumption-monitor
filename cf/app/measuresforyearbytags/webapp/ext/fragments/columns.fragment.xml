<core:FragmentDefinition
       xmlns:core="sap.ui.core"
       xmlns:table="sap.ui.table"
       xmlns="sap.m">
       <table:Column width="25rem">
              <Label text="Hierarchy" />
              <table:customData>
                     <core:CustomData key="p13nData"
                            value='\{"autoColumnWidth": "true", "columnKey": "icon", "leadingProperty": "AccountStructureItem_label", "columnIndex": "0" }' />
              </table:customData>
              <table:template>
                     <FlexBox alignItems="Center" justifyContent="Start">
                            <core:Icon src="{AccountStructureItem_icon}"
                                   class="sapUiSmallMarginEnd" />
                            <Label text="{AccountStructureItem_label}" tooltip="ID: {AccountStructureItem_ID}"/>
                     </FlexBox>
              </table:template>
       </table:Column>
       <table:Column width="6rem">
              <Label text="Services" />
              <table:customData>
                     <core:CustomData key="p13nData"
                            value='\{"autoColumnWidth": "true", "columnKey": "serviceNames", "leadingProperty": "Measures_countServices", "columnIndex": "2" }' />
              </table:customData>
              <table:template>
                     <Link 
                            text="{= ${Measures_countServices} + (${Measures_countServices} > 1 ? ' charges' : ' charge') }"
                            press=".extension.measuresforyearbytags.ext.controller.ListReportExt.handleLinkPress"
                            visible="{= ${Measures_countServices} > 0 }" />
              </table:template>
       </table:Column>
</core:FragmentDefinition>